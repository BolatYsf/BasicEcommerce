@model IEnumerable<EcommerceApp.Application.Models.VMs.ListOfPersonelVM>

@{
    ViewData["Title"] = "ListOfPersonnel";
    
}

<h1>ListOfPersonnel</h1>

<p>
    <a asp-action="AddPersonnel" asp-area="Admin">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                Image
            </th>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
               Roles
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
             <tr>
               <td>
                   <img src="@item.ImagePath" height="50" width="50">
               </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Surname
                </td>
                <td>
                    @item.Roles.ToString()
                </td>
                <td>
                    <a class="btn btn-success" asp-action="UpdatePersonnel" asp-area="Admin" asp-controller="Manager" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-danger" asp-action="DeletePersonnel" asp-area="Admin" asp-controller="Manager" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
}
    </tbody>
</table>
